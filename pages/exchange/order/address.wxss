/* pages/gifts/pages/address/address.wxss */
@import "/pages/template/css/common.wxss";
page {
    background: #f4f4f4;
}
.mainaddress{
    display: flex;
    flex-direction: column;
}
.addresshead{
    background: #fff;
    border-top: solid 2rpx #f4f4f4;
    border-bottom: solid 2rpx #f2f2f2;
}
.addresssrow{
    margin: 0rpx 5%;
    padding: 20rpx 0rpx;
    font-size: 28rpx;
    border-bottom: solid 2rpx #f4f4f4;
    align-items: center;
}
.addresssrow1{
    margin: 0rpx 5%;
    padding: 20rpx 0rpx;
    font-size: 30rpx;
    /* border-bottom: solid 2rpx #f4f4f4; */
    align-items: center;
}

.useinfo{
    margin-top: 20rpx;
    border: solid 2rpx red;
    font-size: 28rpx;
    text-align: center;
    padding:20rpx 0;
}

.apply{
    margin:0 auto;
    margin-top:20rpx;
    font-size:36rpx;
    text-align:center;
    padding:20rpx 0;
    color:#fff;
    background-color:#e33d3d;
    width:680rpx;
    border-radius:200rpx;
}
.message{
    margin-top: 20rpx;
    text-align: center;
    color: #e33d3d;
    font-size: 28rpx;
}
.message text{
    color:blue;
}

/*确认信息*/
.info_check{
    width: 76%;
    height:382rpx;
    position:fixed;
    top:250rpx;
    left: 12%;
    z-index: 2000;
    background:#fff;
    border-radius:10rpx;
}
.commodity_screen{
    width: 100%;
    height:100%;
    position:fixed;
    top:0;
    left:0;
    background:#000;
    opacity:0.5;
    overflow:hidden;
    z-index:1000;
}
.info_title{
    text-align: center;
    font-size: 36rpx;
    line-height: 118rpx;
}
.ranges{
    display: flex;
    flex-direction:column;
    justify-content:left;
    font-size:30rpx;
    margin-left:50rpx;
    margin-right:50rpx;
    height: 182rpx;
    color: #999;
    overflow: auto;
}
.twobtn{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 80rpx;
}
.twobtn .leftbtn{
    width: 50%;
    font-size: 30rpx;
    text-align:center;
    line-height: 70rpx;
    border:solid 1px #f4f4f4;
    border-bottom-left-radius:10rpx;
}
.twobtn .rightbtn{
    width: 50%;
    font-size: 30rpx;
    text-align:center;
    line-height: 70rpx;
    border:solid 1px #f4f4f4;
    color: rgb(92,111,152);
    border-bottom-right-radius:10rpx;
}
.limitfont1{
    max-width:100%;
    word-break:break-all;
    text-overflow:-o-ellipsis-lastline;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-line-clamp:1;
    -webkit-box-orient:vertical;
}
.limitfont2{
    max-width:100%;
    word-break:break-all;
    text-overflow:-o-ellipsis-lastline;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
}


/* 去除button默认样式 */
button::after {
    border: none;
}
button {
    background-color: transparent;
    padding-left: 0;
    padding-right: 0;
    margin-left: 0;
    margin-right: 0;
    line-height:inherit;
}
button {
    border-radius:0;
}
input{
    outline:none;
    border:none;
    list-style: none;
}



