/*价格选择*/
.choose_shop{display:flex;flex-direction:row;justify-content:left;align-self:center;background:#fff;}
.choose_shop .choose_type{font-size:28rpx;width: 170rpx;padding: 20rpx 0 20rpx 40rpx;text-align: left;}
.choose_type{display: flex;flex-direction:row;align-self:center;align-items: center;}
.choose_order{width: 16rpx;height:22rpx;padding-left:10rpx;}
.choose_type1{width: 22rpx;height:22rpx;padding-left:6rpx;}
.price_area{display:flex;flex-direction:row;justify-content:space-between;background:#fff;padding:20rpx 20rpx 30rpx;}
.prices{font-size:28rpx;width:150rpx;height:60rpx;line-height: 60rpx;text-align:center;border-radius:8rpx;}
.thisarea1{background: #eeeeee;}
.thisarea{background: #e33d3d;color: #fff;}
.type1{color:#000;}
.type2{color:#999;}
/*使屏幕变暗 */
.common_screen_gray {width: 100%;height: 100%;position: fixed;top: 0;left: 0;background: #000;opacity: 0.7;overflow: hidden;z-index: 1000;color: #fff;}
/*复制按钮*/
.copy_btn {font-size:20rpx;margin-left:2%;background:#fff;color:#000;box-sizing:border-box;height:38rpx;line-height:38rpx;display:flex;align-items:center;justify-content: center; border:solid 1px #999;border-radius:200rpx;padding:10rpx 16rpx;}
/*拨打电话按钮*/
.tel_btn {
    font-size:20rpx;margin-left:2%;background:#fff;color:#000;
    box-sizing:border-box;height:44rpx;width:120rpx;border:solid 1px #999;border-radius:200rpx;
    display:flex;align-items:center;justify-content: center;}
/*客服按钮*/
.customer_servicez{color: #30323f;background: #fff;border: solid 2rpx #999999;font-size: 28rpx;padding: 16rpx 0rpx;text-align: center;width: 93%;overflow: visible;border-radius: 200rpx;}
/*底部一个button*/
.btn_foot{position: fixed;left: 0;bottom: 0rpx;width: 100%;background:#fff;height: 110rpx;}
.btn_bottom{margin: 18rpx auto;width: 90%;text-align: center;height: 80rpx;line-height: 80rpx;color: #fff;font-size: 36rpx;background:#e33d3d;border-radius: 200rpx;}
/*底部两个button*/
.foot {position: fixed;bottom: 0;left: 0;width: 100%;height: 110rpx;background:#fff;display: flex;flex-direction: row;justify-content: space-around;align-items: center;}
.foot_left{width: 45%;}
.foot_left1{background: #fff;color: #000;width: 100%;height: 80rpx;font-size: 34rpx;border: solid 1px #cccccc;border-radius:200rpx;display:flex;justify-content:center;align-items:center;}
.foot_right{width: 45%;}
.foot_right1{color: #fff;background: #e33d3d;border-radius:200rpx;width: 100%;height: 80rpx;font-size: 34rpx;border: solid 1px #e33d3d;display:flex;justify-content:center;align-items:center;}
/*收礼页面底部两个图标*/
.share_foot {position: fixed;bottom: 0;left: 0;width: 100%;height: 110rpx;background:#fff;display: flex;flex-direction: row;align-items: center;justify-content: space-between;}
.sharegiftsicon{width:20%;display: flex;align-items: center;padding: 0 0 0 8%;}
.sharegiftsicon image{width:80rpx;}
.sharegiftsicon_right{ display:flex;flex-direction: row;justify-content: space-between; width:80%; padding:0 5% 0 0;}
.share_foot_left{width: 43%;}
.share_foot_left1{background: #fff;color: #000;width: 100%;height: 76rpx;font-size: 34rpx;border: solid 1px #cccccc;border-radius:200rpx;display:flex;justify-content:center;align-items:center;}
.share_foot_right{width: 50%;}
.share_foot_right1{color: #fff;background: #e33d3d;border-radius:200rpx;width: 100%;height: 76rpx;font-size: 34rpx;border: solid 1px #e33d3d;display:flex;justify-content:center;align-items:center;}
/* 去除button默认样式 */
button::after {border: none;}
button {background-color: transparent;padding-left: 0;padding-right: 0;line-height:inherit;}
button {border-radius:0;}
input{outline:none;border:none;list-style: none;}
/*收礼详情，填写地址  配送范围弹框  */
.showrange_commodity_attr_boxarea {height:402rpx;width:72%;border-radius:24rpx;background:#fff;position:fixed;top:430rpx;left:14%;z-index:2000;overflow:auto;}
.showrange_ranges_area{font-size:30rpx;padding:20rpx 8%;border-bottom:solid 2rpx #eee;}
.showrange_ranges{font-size: 28rpx;padding: 20rpx 6% 20rpx 7%;display: flex;flex-direction: row;flex-wrap: wrap;}
.showrange_diming{padding-bottom: 6rpx;padding-right: 12rpx;}
.showrange_cancels{position: absolute;top: 0rpx;right: 0rpx;padding: 4rpx 20rpx 20rpx 20rpx;}
/*送礼流程提示弹框*/
.screen_send_tips {height: 100%;width: 750rpx;position: fixed;top: 150rpx;left: 0;z-index: 2000;overflow: hidden;display: flex;flex-direction: column;}
.screen_send_tips1{width: 580rpx;height: 816rpx;margin: 0 auto;text-align:center;background-image: url('https://files.dianlinet.com/images/send_tips.png');background-repeat:no-repeat;background-size:100% 100%;-moz-background-size:100% 100%;}
.screen_send_know {margin: 0 auto;margin-top: 700rpx;text-align: center;background:#e33d3d;font-size:18px;color:#fff;border-radius:8rpx;padding:14rpx 100rpx;width: 250rpx;}

